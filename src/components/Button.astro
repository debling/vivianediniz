---
interface Props  {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;

---

<button class={
  `subtitle-font text-black rounded-xl font-bold py-2 px-4 mx-2 ${className}`
  }>
  {title}
</button>

<style>
.blur-filer {
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 1);
}
</style>
