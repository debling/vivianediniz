---
import { Image } from "astro:assets";

import Layout from "../../layouts/Layout.astro";
import NavBar from "../../components/NavBar.astro";

import redDress from "../../img/red_dress.png";
import cartao from "../../img/cartao.png";
import casa from "../../img/casa.png";
---

<Layout title="Portifolio | Viviane">
  <NavBar />
  <main class="flex h-full items-center justify-center">
    <div class="mr-5 flex">
      <div class="mr-5 bg-red-200">
        <Image
          class="rounded-img"
          src={redDress}
          width="213"
          height="372"
          alt="Vestido vermelho"
          loading="eager"
        />
      </div>

      <div class="flex flex-col justify-between">
        <div>
          <Image
            class="rounded-img"
            src={casa}
            width="218"
            height="176"
            alt="Vestido vermelho"
            loading="eager"
          />
        </div>

        <div>
          <Image
            class="rounded-img"
            src={cartao}
            width="218"
            height="176"
            alt="Vestido vermelho"
            loading="eager"
          />
        </div>
      </div>
    </div>

    <div class="flex-row items-center pl-2">
      <h4 class="subtitle-font text-center text-[20px] font-semibold">
        GRAPHIC DESIGNER AND 3D ARTIST
      </h4>

      <h1 class="title-font text-center text-[75px] uppercase">Viviane Diniz</h1>
    </div>
  </main>
</Layout>

<style>
  .rounded-img {
    border-radius: 10px;
  }
</style>
